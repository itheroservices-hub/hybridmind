# HybridMind Backend Environment Configuration
# IMPORTANT: This file contains secrets - NEVER commit it to Git!
# Copy this file to .env and fill in your actual API keys

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ðŸš¨ COST PROTECTION (CRITICAL FOR STUDENTS!)
MAX_COST_PER_DAY=2.0          # Maximum daily API cost in USD (increase when you have revenue)
MAX_REQUESTS_PER_MINUTE=10    # Burst protection
MAX_REQUESTS_PER_HOUR=50      # Hourly limit for free tier
MAX_CODE_SIZE_BYTES=100000    # Max 100KB per request

# AI Provider API Keys
# NOTE: You ONLY need OPENROUTER_API_KEY - all models go through OpenRouter!
OPENROUTER_API_KEY=your_openrouter_key_here

# Legacy keys (not used anymore, but kept for backward compatibility)
GROQ_API_KEY=not_used
DEEPSEEK_API_KEY=not_used
GEMINI_API_KEY=not_used
QWEN_API_KEY=not_used
QWEN_API_KEY_2=not_used
ANTHROPIC_API_KEY=not_used
OPENAI_API_KEY=not_used
MISTRAL_API_KEY=not_used
XAI_API_KEY=not_used

# Model Configuration
DEFAULT_MODEL=meta-llama/llama-3.3-70b-instruct  # FREE model by default!
MAX_RETRIES=2                                     # Reduced to save costs
REQUEST_TIMEOUT=120000

# Agent Configuration
AGENT_MAX_STEPS=5            # Reduced from 10 to control costs
AGENT_TIMEOUT=300000

# ðŸ’° COST ALERTS
ENABLE_COST_ALERTS=true      # Send alerts when approaching daily limit
COST_ALERT_THRESHOLD=0.8     # Alert at 80% of daily budget ($1.60 of $2.00)
